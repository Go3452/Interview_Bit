public class Solution {
	public void sortColors(ArrayList<Integer> a) {
        int c0=0,c1=0,c2=0,n=a.size();
        for(int i=0;i<n;i++)
        {
         if(a.get(i)==0)
          c0++;
         else if(a.get(i)==1)
          c1++;
         else
          c2++;
        }
        for(int i=0;i<c0;i++)
         a.set(i,0);
        c1+=c0;
        for(int i=c0;i<c1;i++)
         a.set(i,1);
        c2+=c1;
        for(int i=c1;i<c2;i++)
         a.set(i,2);
	}
}
